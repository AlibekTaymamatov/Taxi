<Page x:Class="WpfTaxi.Viwe.Otchet_dis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfTaxi.Viwe"
      mc:Ignorable="d" 

      Title="Otchet_dis">

    <Grid>
        <DataGrid ItemsSource="{Binding dispatch}" IsReadOnly="True" CanUserAddRows="False" AutoGenerateColumns="False"  RowBackground="SeaShell" AlternatingRowBackground="Aquamarine" >

            <DataGrid.Columns>

                <DataGridTextColumn Header="Диспетчер"  Binding="{Binding Dispatcher_name }" Width="*"/>

                <DataGridTextColumn Header="Количество принятых закзов"  Binding="{Binding Orders.Count }" Width="*" />
                

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
