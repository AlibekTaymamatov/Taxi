<Window x:Class="WpfTaxi.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaxi"
        mc:Ignorable="d"
         Title="Авторизация" MinWidth="300" MaxWidth="300" Width="300" Height="300" MinHeight="300" MaxHeight="300" Background="Silver">
    <Grid  >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label  Content="Логин"     Height="30" Width="50"/>
            <TextBox Text="{Binding Login}" Name="login"  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="20" Width="120" />
            <Label  Content="Пароль"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="50" />
            <PasswordBox   x:Name="pas"  HorizontalAlignment="Center" VerticalAlignment="Center"  Height="20" Width="120"  />
            <Label  Content=""  HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="80" />
            <Button Command="{Binding OK}" Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>

        </StackPanel>
    </Grid>
</Window>
